#!/bin/sh

if [ "$AUTH_VERBOSITY" = "verbose" ]; then
  VERBOSE="--verbose"
fi

if [ $1 = "setup-start" -o $1 = "setup-recover" ]; then
  cp $VERBOSE /etc/passwd "${CHROOT_PATH}/etc/passwd"
  cp $VERBOSE /etc/shadow "${CHROOT_PATH}/etc/shadow"
  cp $VERBOSE /etc/group  "${CHROOT_PATH}/etc/group"
fi

