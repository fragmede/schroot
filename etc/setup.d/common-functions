# Common functions for use in schroot setup scripts

# Log an informational message
# $1: The message
info()
{
    if [ "$VERBOSE" = "verbose" ]; then
        echo "$1"
    fi
    return 0
}

# Log warning message
# $1: The message
warn()
{
    echo "warning: $1" 1>&2
    return 0
}

# Log an error message
# $1: The message
error()
{
    echo "error: $1" 1>&2
    return 0
}

# Log an error message
# $1: The message
fatal()
{
    echo "error: $1" 1>&2
    exit 1
}
