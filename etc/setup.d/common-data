# Common data for use in schroot setup scripts

# Script arguments
STAGE="$1"
STATUS="$2"


# FreeBSD uses character devices in place of block devices
case "$HOST_OS" in
    freebsd* | k*bsd*-gnu) :
        DEVTYPE="-c"
        ;;
    *):
        DEVTYPE="-b"
        ;;
esac
